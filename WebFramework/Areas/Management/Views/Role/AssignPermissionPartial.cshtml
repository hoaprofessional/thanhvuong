@using WebCore.Services.Share.Commons.Permissions.Dto
@model PermissionDto
@{
    Model.Name = "Chọn tất cả";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Phân quyền</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card-body">
            <treeview treeview-model="Model" 
                    treeview-isrenderrootnode="true"
                    treeview-partialview-child="~/Areas/Management/Views/Role/PermissionTreeItemPartial.cshtml"></treeview>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="button" onclick="savePermission('@ViewBag.RoleId')" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</div>
