@model WebCore.Areas.Admin.Models.AdminBaseViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin Free Bootstrap Admin Dashboard Template</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/areas/management/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/areas/management/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/areas/management/vendors/css/vendor.bundle.addons.css">
    <link rel="stylesheet" href="/areas/management/vendors/icheck/skins/all.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/areas/management/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/areas/management/images/favicon.png" />
    <link rel="stylesheet" href="/areas/management/vendors/iconfonts/font-awesome/css/font-awesome.css">
    <link href="~/areas/management/alertify/alertify.core.css" rel="stylesheet" />
    <link href="~/areas/management/alertify/alertify.default.css" rel="stylesheet" />
    <link href="~/areas/management/validify/validify.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/css/bootstrap-checkbox/bootstrap-checkbox.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style>
        .modal-dialog {
            max-width: 900px !important;
        }
        ul.pagination > li.active > span {
            min-width: 44px;
            padding: 10px;
            margin-left: 5px;
            margin-right: 5px;
            text-align: center;
            display: block;
            border: solid 1px #9E9E9E;
            background: #308ee0;
            color: white;
            font-weight: bold;
        }

        span.field-validation-error {
            color: red;
            font-size: 13px;
        }

        .input-validation-error {
            border-color: red !important;
        }

    </style>
</head>


<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="/">
                    <img src="/areas/management/images/logo.svg" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="/">
                    <img src="/areas/management/images/logo-mini.svg" alt="logo" />
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex">
                   
                </ul>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown d-none d-xl-inline-block">
                        <a class="nav-link dropdown-toggle" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <span class="profile-text">@Model.CurrentUserName</span>
                            <img class="img-xs rounded-circle" src="/areas/management/images/faces/face1.jpg" alt="Profile image">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                            <a class="dropdown-item p-0">
                                <div class="d-flex border-bottom">
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center">
                                        <i class="mdi mdi-bookmark-plus-outline mr-0 text-gray"></i>
                                    </div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center border-left border-right">
                                        <i class="mdi mdi-account-outline mr-0 text-gray"></i>
                                    </div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center">
                                        <i class="mdi mdi-alarm-check mr-0 text-gray"></i>
                                    </div>
                                </div>
                            </a>
                            <a href="/" id="logout" class="dropdown-item">
                                <i class="material-icons">keyboard_tab</i>
                                Trang chủ
                            </a>
                            <a href="/Home/Logout" id="logout" class="dropdown-item">
                                <i class="material-icons">keyboard_tab</i>
                                Đăng xuất
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Management/Product">
                            <i class="menu-icon mdi mdi-table"></i>
                            <span class="menu-title">Sản phẩm</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Management/User">
                            <i class="menu-icon fa fa-user-circle"></i>
                            <span class="menu-title">Người dùng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Management/Role">
                            <i class="menu-icon fa fa-lock"></i>
                            <span class="menu-title">Nhóm quyền</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Management/Qoutation">
                            <i class="menu-icon fa fa-book"></i>
                            <span class="menu-title">Báo giá</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Management/Order">
                            <i class="menu-icon fa fa-money"></i>
                            <span class="menu-title">Đơn hàng</span>
                        </a>
                    </li>
                </ul>
            </nav>

            @RenderBody()

        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/areas/management/vendors/js/vendor.bundle.base.js"></script>
    <script src="/areas/management/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="/areas/management/js/off-canvas.js"></script>
    <script src="/areas/management/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="/areas/management/js/dashboard.js"></script>
    <script src="~/js/pages/bootstrap-notify.js"></script>
    <!-- End custom js for this page-->
    <script src="/areas/management/js/chart.js"></script>
    <script src="~/areas/management/alertify/alertify.min.js"></script>
    <script src="~/areas/management/validify/validify.js"></script>
    <script src="~/js/cleave.min.js"></script>
    <script src="~/areas/management/common.js" asp-append-version="true"></script>
    <script src="~/js/pages/common.js"></script>
    <script src="~/js/pages/permission-role-checked.js"></script>
    @RenderSection("scripts", required: false)


</body>

</html>



