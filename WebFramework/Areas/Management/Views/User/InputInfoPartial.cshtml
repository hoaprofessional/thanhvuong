@model WebCore.Services.Share.Admins.Users.Dto.UserInfoInput
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Thông tin người dùng</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="card-body">
            <form data-noreload="true"
                  data-on-submit-done="onInputSubmitDone"
                  data-on-submit-fail="onInputSubmitFail"
                  method="post"
                  asp-action="InputInfoPartial"
                  id="saveInputForm">

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <input asp-for="Id" type="hidden" class="form-control">
                            <input asp-for="UpdateToken" type="hidden" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating" asp-for="Name">Tên người dùng</label>
                            <input language-support="true" class="form-control" asp-for="Name" required type="text" />
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating" asp-for="Contract">Liên hệ</label>
                            <input language-support="true" class="form-control" asp-for="Contract" type="text" />
                            <span asp-validation-for="Contract"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating" asp-for="Carrer">Nghề nghiệp</label>
                            <input language-support="true" class="form-control" asp-for="Carrer" type="text" />
                            <span asp-validation-for="Carrer"></span>
                        </div>
                    </div>
                    <button type="submit" hidden></button>
                </div>
            </form>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="button" onclick="$('#saveInputForm').submit()" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Management/Views/Shared/_ValidationScriptsPartial.cshtml")
<script>
</script>
